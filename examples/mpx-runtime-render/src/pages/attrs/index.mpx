<template>
  <view>
    <view class="wrapper">
      <btn-group confirm-btn="{{ confirmBtn }}" cancel-btn="{{ cancelBtn }}"></btn-group>
    </view>
  </view>
</template>

<script>
import { createComponent } from '@mpxjs/core'

createComponent({
  data: {
    confirmBtn: {
      text: '确认2',
      inline: false,
      bolder: true,
      red: true
    },
    cancelBtn: {
      text: '取消按钮',
      inline: false,
      bolder: true
    }
  },
  attached () {
    setTimeout(() => {
      this.confirmBtn.red = false
    }, 2000)
    setTimeout(() => {
      this.confirmBtn.red = true
    }, 5000)
  }
})
</script>

<style lang="stylus">
.wrapper
  margin 10px
  padding 10px
  border 1px solid #ccc
</style>

<script type="application/json">
{
  "usingComponents": {
    "btn-group": "./components/button-group"
  }
}
</script>
