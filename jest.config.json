{
  "transform": {
    "^.+\\.(js|jsx)?$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(css|styl)$": "identity-obj-proxy"
  },
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/packages/core/**/?(*.)+(spec|test).[jt]s?(x)",
    "**/packages/webpack-plugin/**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testPathIgnorePatterns": ["dist", "node_modules"]
}
